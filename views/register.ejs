<% include ./partials/header %>

  <div class="row">
    <div class="col-md-12 text-center">
      <h1 style="text-align: center">Sign Up</h1>
    </div>
    <div class="col-md-12">
      <form action="/register" method="POST" class="form-signin">
        <label for="inputUsername" class="sr-only">Username</label>
        <input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email" required>
        <label for="inputAdminCode" class="sr-only">Admin Code</label>
        <input type="text" id="inputAdminCode" class="form-control" name="adminCode" placeholder="Admin Code">

        <!-- Insert the code for the reCaptcha check box -->
        <div class="g-recaptcha" data-sitekey="6LdI51EUAAAAAAdz7ukfCrvo_TgdsWOhxX9MMHhf"></div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up!</button>
      </form>
      <div class="form-signin">
        <a href="/campgrounds">Go Back</a>
      </div>
    </div>
  </div>

  <% include ./partials/footer %>